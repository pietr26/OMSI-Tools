
/*-----QWidget-----*/
QWidget
{
	background-color: %<%background%>%;
	color: %<%font%>%; /*standard font color for all texts*/
}

/*-----QLabel-----*/
QLabel
{

}

QLabel::disabled
{
	color: %<%fontDisabled%>%;
}

/*-----QMenuBar-----*/
QMenuBar 
{
	background-color: %<%background%>%;
	border-bottom: 1px solid %<%borders%>%;
}

QMenuBar::item { }

QMenuBar::item:selected 
{
	background-color: %<%accent%>%;
}

/*-----QMenu-----*/
QMenu
{
	padding: 2px;
	border: 1px solid %<%borders%>%;
}

QMenu::separator
{
	background-color: %<%accent%>%;
    height: 1px;
}

QMenu::item:disabled
{
	color: %<%fontDisabled%>%;
}

QMenu::item:selected:!disabled
{
	background-color: %<%accent%>%;
}

/*-----QToolBar-----*/
QToolBar
{
	/*background-color: red;*/
}

/*-----QPushButton & QToolButton-----*/
QPushButton,
QToolButton
{
	background-color: %<%inputs%>%;
	border: 1px solid %<%borders%>%;
	border-radius: 3px;
	padding: 2px;
}

QPushButton:hover,
QToolButton:hover
{
    border: 1px solid %<%accent%>%;
}

QPushButton:pressed,
QToolButton:pressed
{
	background-color: %<%accent%>%;
}

QPushButton:checked,
QToolButton:checked
{
	border: 1px solid %<%accent%>%;
}

QPushButton::disabled,
QToolButton::disabled
{
	background-color: %<%backgroundDisabled%>%;
	color: %<%fontDisabled%>%;
	border-color: %<%fontDisabled%>%;
}

QPushButton::flat,
QToolButton::flat
{
	background-color: transparent;
	border: none;
}

/*-----QLineEdit-----*/
QLineEdit
{
	background-color: %<%inputs%>%;
	border-radius: 3px;
	padding: 2px;
	border: 1px solid %<%borders%>%;
}

QLineEdit::hover
{
	border: 1px solid %<%accent%>%;
}

QLineEdit::disabled
{
	color: %<%fontDisabled%>%;
}

/*-----QPlainTExtEdit-----*/
QPlainTextEdit
{
	background-color: %<%inputs%>%;
	border-radius: 3px;
	padding: 2px;
	border: 1px solid %<%borders%>%;
}

QPlainTextEdit::hover
{
	border: 1px solid %<%accent%>%;
}

QPlainTextEdit::disabled
{
	color: %<%fontDisabled%>%;
}

/*-----QTextEdit-----*/
QTextEdit
{
	background-color: %<%inputs%>%;
	border-radius: 3px;
	padding: 2px;
	border: 1px solid %<%borders%>%;
}

QTextEdit::hover
{
	border: 1px solid %<%accent%>%;
}

QTextEdit::disabled
{
	color: %<%fontDisabled%>%;
}

/*-----QTabBar-----*/
QTabBar::tab
{
	background-color: transparent;
	padding: 3px;
	padding-left: 15px;
	padding-right: 15px;
	border: 1px solid %<%fontDisabled%>%;
	border-bottom: none;
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
}

QTabBar::tab:!selected:!first
{
	border-left: none;
}

QTabBar::tab:!selected
{
	margin-top: 2px;
}

QTabBar::tab:next-selected
{
	border-right: none;
}

QTabBar::tab:selected
{
	background-color: %<%inputs%>%;
	border-color: %<%borders%>%;
	border-bottom: 1px solid %<%inputs%>%;
	
	font-weight: bold;
}

QTabWidget::pane 
{
	border: 1px solid %<%borders%>%;
	top: 1px;
}

QTabBar::tab:hover
{
	background-color: %<%accent%>%;
}

/*-----QComboBox-----*/
QComboBox
{
    background-color: %<%inputs%>%;
    border: 1px solid %<%borders%>%;
	border-radius: 3px;
	padding: 2px;
}

QComboBox::disabled
{
	color: %<%fontDisabled%>%;
}

QComboBox:on
{
	background-color: %<%accent%>%;
}

QComboBox::drop-down
{
	border-left: 1px solid %<%borders%>%;
}

QComboBox::hover
{
	border: 1px solid %<%accent%>%;
}

/*-----QSpinBox & QDoubleSpinBox & QDateTimeEdit-----*/
QSpinBox,
QDoubleSpinBox,
QDateTimeEdit 
{
	background-color: %<%inputs%>%;
	padding: 3px;
    border: 1px solid %<%borders%>%;
	border-radius: 3px;
}

QSpinBox::hover,
QDoubleSpinBox::hover,
QDateTimeEdit::hover
{
	border: 1px solid %<%accent%>%;
}

QSpinBox::disabled,
QDoubleSpinBox::disabled,
QDateTimeEdit::disabled
{
	color: %<%fontDisabled%>%;
}

/*-----QGroupBox-----*/
QGroupBox
{
	border: 1px solid %<%borders%>%;
	border-radius: 3px;
    margin-top: 1.5ex;
}

QGroupBox::title
{
    subcontrol-origin: margin;
}

/*-----QHeaderView-----*/
QHeaderView::section
{
    background-color: %<%inputs%>%;
	border: 1px solid %<%borders%>%;
	padding: 2px;
}

QHeaderView::section:disabled
{
	color: %<%fontDisabled%>%;
}

QHeaderView::section:checked
{
    background-color: %<%accent%>%;
    color: #fff;
}

QTableCornerButton::section
{
    background-color: %<%inputs%>%;
	border: 1px solid %<%borders%>%;
}

/*-----QTableView-----*/
QTableView::item:disabled
{
	color: %<%fontDisabled%>%;
}

/*-----QTreeWidget-----*/
QTreeView
{
	background-color: %<%inputs%>%;
	border: 1px solid %<%borders%>%;
}

QTreeView::item:selected
{
	background-color: %<%accent%>%;
}

QTreeView::item:disabled
{
	color: %<%fontDisabled%>%;
}

QTreeView::item:!selected:hover
{
	background-color: %<%accent%>%;
}

/*-----QListView-----*/
QListView 
{
	background-color: %<%inputs%>%;
	border: 1px solid %<%borders%>%;
}

QListView::disabled 
{
	color: %<%fontDisabled%>%;
}

QListView::item:selected 
{
	background-color: %<%accent%>%;
}

QListView::item:!selected:hover
{
	background-color: %<%accent%>%;
}

QListView::item:disabled
{
	color: %<%fontDisabled%>%;
}

/*-----QCheckBox-----*/
QCheckBox
{
	background-color: transparent;
	border: none;
}

QCheckBox::disabled
{
	color: %<%fontDisabled%>%;
}

/*-----QRadioButton-----*/
QRadioButton 
{
	background-color: transparent;
	border: none;
}

QRadioButton::disabled
{
	color: %<%fontDisabled%>%;
}

/*-----QSlider-----*/
QSlider::groove:horizontal 
{
	background-color: transparent;
	height: 3px;
}

QSlider::sub-page:horizontal 
{
	background-color: %<%accent%>%;
}

QSlider::add-page:horizontal 
{
	background-color: %<%borders%>%;
}

QSlider::handle:horizontal 
{
	background-color: %<%font%>%;
	width: 10px;
	margin-top: -6px;
	margin-bottom: -6px;
}

QSlider::handle:horizontal:hover 
{
	background-color: %<%accent%>%;
	border-radius: 6px;
}

QSlider::sub-page:horizontal:disabled 
{
	background-color: %<%fontDisabled%>%;
}

QSlider::add-page:horizontal:disabled 
{
	background-color: %<%fontDisabled%>%;
}

QSlider::handle:horizontal:disabled 
{
	background-color: %<%fontDisabled%>%;
}

/*------------*/

QSlider::groove:vertical 
{
	background-color: transparent;
	height: 3px;
}

QSlider::sub-page:vertical 
{
	background-color: %<%accent%>%;
}

QSlider::add-page:vertical 
{
	background-color: %<%borders%>%;
}

QSlider::handle:vertical 
{
	background-color: %<%font%>%;
	width: 10px;
	margin-top: -6px;
	margin-bottom: -6px;
}

QSlider::handle:vertical:hover 
{
	background-color: %<%accent%>%;
	border-radius: 6px;
}

QSlider::sub-page:vertical:disabled 
{
	background-color: %<%fontDisabled%>%;
}

QSlider::add-page:vertical:disabled 
{
	background-color: %<%fontDisabled%>%;
}

QSlider::handle:vertical:disabled 
{
	background-color: %<%fontDisabled%>%;
}

/*-----QScrollBar-----*/
QScrollBar:horizontal
{	
	background-color: %<%background%>%;
    height: 16px;
	border: 1px solid %<%borders%>%;
    margin: 0px 16px 0px 16px;
}

QScrollBar::handle:horizontal
{
	background-color: %<%inputs%>%;
    min-height: 20px;
}

QScrollBar::add-line:horizontal
{
	background-color: %<%inputs%>%;
	border: 1px solid %<%borders%>%;
    width: 15px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal
{
	background-color: %<%inputs%>%;
	border: 1px solid %<%borders%>%;
    width: 15px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}

QScrollBar:vertical
{
    background-color: %<%background%>%;
    width: 16px;
	border: 1px solid %<%borders%>%;
    margin: 16px 0px 16px 0px;
}

QScrollBar::handle:vertical
{
	background-color: %<%inputs%>%;
    min-height: 20px;
}

QScrollBar::add-line:vertical
{
	background-color: %<%inputs%>%;
	border: 1px solid %<%borders%>%;
    height: 15px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical
{
	background-color: %<%inputs%>%;
	border: 1px solid %<%borders%>%;
    height: 15px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}

QScrollBar::add-page, QScrollBar::sub-page
{
	border: none;
	background: none;
}

/*-----QProgressBar-----*/
QProgressBar
{
	border: 1px solid %<%borders%>%;
	border-radius: 3px;
    text-align: center;
}

/*-----QDockWidget-----*/
QDockWidget
{
    border: 1px solid %<%borders%>%;
	border-radius: 3px;
    titlebar-close-icon: url(:/rec/data/icons/iconDelete.svg);
    titlebar-normal-icon: url(:/rec/data/icons/iconResize.svg);
}

QDockWidget::title
{
	background-color: %<%inputs%>%;
	border: 1px solid %<%borders%>%;
	border-left: none;
	border-right: none;
	padding-top: 4px;
	padding-left: 5px;
}
